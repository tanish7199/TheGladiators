<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:layout_height="60dp"
        android:layout_width="wrap_content"
        android:src="@drawable/logo"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please choose one of the following:"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_margin="8dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <Button
            android:layout_marginEnd="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"
            android:background="@drawable/medicine"
            android:id="@+id/Medicines"
            android:textColor="#000"
            android:alpha="0.75"
            android:textStyle="bold"
            android:textSize="30sp"
            android:paddingTop="150dp"
            android:text="Medicines"/>

        <Button
            android:background="@drawable/disease"
            android:layout_marginStart="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/Diseases"
            android:textSize="30sp"
            android:textStyle="bold"
            android:alpha="0.75"
            android:paddingTop="150dp"

            android:layout_marginBottom="2dp"
            android:text="Diseases"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_marginEnd="2dp"
            android:background="@drawable/doc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Contact a doctor"
            android:paddingTop="100dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:alpha="0.75"
            android:layout_marginTop="2dp"
            android:id="@+id/Contact"/>
        <Button
            android:layout_marginLeft="2dp"
            android:background="@drawable/store"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Locate Medical Store"
            android:layout_weight="1"
            android:paddingTop="150dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:alpha="0.75"
            android:layout_marginTop="2dp"
            android:id="@+id/Locate"/>
    </LinearLayout>
</LinearLayout>